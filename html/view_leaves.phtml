{% extends "base.phtml" %}

{% block content %}
  <div align="CENTER">
  <span>Welcome {{ user }}</span>
  <table>
    <thead>
      <tr>
        <th>Sl no.</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Reason</th>
        <th>Approved</th>
      </tr>
    </thead>
    <tbody>
      {% for leave in leaves %}
        <tr>
          <td>{{ loop.index }}</td>
          <td>{{ leave.start_date }}</td>
          <td>{{ leave.end_date }}</td>
          <td>{{ leave.reason }}</td>
          <td>{{ leave.status }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <form action="index.php?page=apply" method="post">
    <input type="hidden" value="{{ user }}" name="EmpID" >
    <input type="submit" value="Apply for Leave">
  </form>
  <form action="index.php?page=approve" method="post">
    <input type="hidden" value="{{ user }}" name="EmpID" >
    <input type="submit" value="Approve Leaves">
  </form>
</div>
{% endblock %}